<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TravelRecordApp.RegisterPage" Title="Registration">

    <StackLayout x:Name="containerStackLayout" VerticalOptions="Center"
                 Margin="20">
        <Entry x:Name="emailEntry" Placeholder="Email "
               TextColor="{StaticResource blueColor}"
               Text="{Binding Email, Mode=TwoWay}"
               Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password"
               IsPassword="True"
               TextColor="{StaticResource blueColor}"
               Text="{Binding Password, Mode=TwoWay}"/>
        <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm password"
               IsPassword="True"
               TextColor="{StaticResource blueColor}"
               Text=""/>
        <Button x:Name="registerButton" 
                Margin="0,50,0,0"
                Text="Register"
                Clicked="registerButton_Clicked"
                Style="{StaticResource normalButton}"/>
    </StackLayout>
</ContentPage>